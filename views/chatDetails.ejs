
 <%- include("./partials/adminHeader") %>
    
        <a class="messageContainer">
           <h4><%= chat.chat_contact %></h4>
            <p class="message"><%= chat.chat_message %></p>
            <div class="details-prompt">
                <p class="name">Name: <%= chat.chat_name %></p>
                <p class="service">Service: <%= chat.chat_service %></p>
                <p class="date"><%= chat.created_at %></p>
            </div>

         
        </a>
      

        <div class="action-buttons">
         <a href="/backend/chats">‚Üê Back </a>
         <form action="/backend/chat/<%= chat.id %>/delete" method="POST" style="display:inline;">
           <button type="submit" class="delete-btn" onclick="return confirm('Are you sure you want to delete this message?')">
             Delete
           </button>
         </form>
  
         </div>
   </main>

 <script src="/js/admin.js"></script>
 <script>
   // Debug HTMX delete button
   document.addEventListener('htmx:beforeRequest', function(event) {
     console.log('HTMX Request:', {
       verb: event.detail.verb,
       path: event.detail.path,
       xhr: event.detail.xhr
     });
   });
   
   document.addEventListener('htmx:afterRequest', function(event) {
     console.log('HTMX Response:', {
       status: event.detail.xhr.status,
       response: event.detail.xhr.responseText
     });
   });
 </script>
</body>
</html>